
<%= form_for @user, url: {action: "update"} do |f| %>
  <%= f.text_field :first_name, placeholder: "First Name" %><br>
  <%= f.text_field :last_name, placeholder: "Last Name" %><br>
  <%= f.text_field :city, placeholder: "City" %><br>
  <%= f.text_field :role, placeholder: "Musician" %><br>
  <%= f.text_area :summary, size: "60x12", placeholder: "I play the harpsichord because I'm trendy." %><br>
  <%= f.submit "Update" %>
<% end %>
